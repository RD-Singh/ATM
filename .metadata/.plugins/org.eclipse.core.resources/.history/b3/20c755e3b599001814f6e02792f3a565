
public class Bug {
	
	private int diff = 1;
	private int initialPosition;
	
	public Bug(int position){
		position = initialPosition;
	}
	
	public void turn(){
		if(diff == 1){
			diff = -1;
		} else {
			diff = 1;
		}
	}
	public void move(){
		initialPosition += diff;

	}
	public int getPosition(){
		return initialPosition;
	}  	
	
	
	public String toSring()
	{
		
	}
}